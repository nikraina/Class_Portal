<div class="row">
    <div class="col-md-6">
        <center>
            <h1>Login</h1>
            <%= form_tag(:action => 'logintry') %>
                  <table>
                        <tr>
                            <td><%= label_tag(:email,"Email ID : ") %></td>
                            <td><%= text_field_tag(:email) %></td>
                        </tr>
                        <tr>
                            <td><%= label_tag(:password, "Password : ") %></td>
                            <td><%= password_field_tag(:password) %></td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                            <td><button class="btn btn-default navbar-btn" type = "submit" ><a>Login</a></button></td>
                        </tr>
                  </table>
        </center>
    </div>
</div>