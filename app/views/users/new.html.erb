<% @currentuser = User.find_by_id(session[:id])%>

<center>
  <div>
    <h1>New user</h1>
    <% if !@currentuser %>
        <%= form_for(:user,:url =>{:action => 'create'}) do |f| %>
            <div class="field">
              <%= f.label(:email,'Email ID') %><br>
              <%= f.text_field(:email) %>
            </div>
            <div class="field">
              <%= f.label(:name,'Name') %><br>
              <%= f.text_field(:name) %>
            </div>
            <div class="field">
              <%= f.label(:password,'Password') %><br>
              <%= f.password_field(:password) %>
            </div>
            <div class="actions">
              <%= f.submit "Create"%>
            </div>
        <% end %>
    <% else %>
        <%= form_for(:user,:url =>{:action => 'create'}) do |f| %>
            <div class="field">
              <%= f.label(:email,'Email ID') %><br>
              <%= f.text_field(:email) %>
            </div>
            <div class="field">
              <%= f.label(:name,'Name') %><br>
              <%= f.text_field(:name) %>
            </div>
            <div class="field">
              <%= f.label(:password,'Password') %><br>
              <%= f.password_field(:password) %>
            </div>
            <div class="field">
              <%= f.label(:is_admin,'Admin ??') %><br>
              <%= f.check_box(:is_admin) %>
            </div>
            <div class="field">
              <%= f.label(:is_instructor,'Instructor ??') %><br>
              <%= f.check_box(:is_instructor) %>
            </div>
            <div class="actions">
              <%= f.submit "Create"%>
            </div>
        <% end %>
    <% end %>
    </div>
  </center>
