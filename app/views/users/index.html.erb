<% @currentuser= User.find_by_id(session[:id]) %>
<div class ="container">
  <center>
    <h1> All Users</h1>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>  E-mail           </th>
        <th>  Name             </th>
        <th>  Is Admin??       </th>
        <th>  Is Instructor??  </th>
      </tr>
      </thead>

      <tbody>
      <% if !@users.nil? %>
        <% @users.each do |user| %>
            <tr>
              <td><%= user.email %><br></td>
              <td><%= user.name %><br></td>
              <td><%= user.is_admin %><br></td>
              <td><%= user.is_instructor %><br></td>
              <td><%=link_to({:controller => 'users', :action => 'edit',id: user.id }, {:class => 'btn btn-default'}) do%>
                    <i>Edit</i><%end%></td>
              <% if @currentuser != user and  user.email != 'master@master.com' %>
              <td><%=link_to({id: user.id, :action => 'destroy'}, {:class => 'btn btn-default'}) do%>
                    <i>Delete</i><%end%></td>
              <%	 end %>
            </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </center>
</div>
<nav class="navbar navbar-default">
  <%=link_to({:controller => 'admins' , :action => 'home'}, {:class => 'btn btn-default'}) do%>
      <i>Back</i><%end%>
</nav>