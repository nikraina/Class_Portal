<%@student = User.find_by_id(session[:id])	  %>
<%@student_courses = StudentCourse.find_all_by_email(@student.email) %>
<div>
  <center>

    <table class="table table-striped">
      <thead>
      <tr>
        <th>Course ID</th>
        <th>  Title  </th>
        <th>  Description  </th>
        <th>  Materials  </th>
        <th>  Is Active??  </th>
        <th>  Start Date  </th>
        <th>  End Date  </th>
      </tr>
      </thead>

      <tbody>
      <% @student_courses.each do |student_course| %>
          <% @course = Course.find_by_course_id(student_course.course_id) %>
          <%	if @course.is_active and student_course.is_curr_enrolled %>
              <tr>
                <td><%= student_course.course_id %><br></td>
                <td><%= @course.title%><br></td>
                <td><%= @course.description %><br></td>
                <td><%= @course.materials %><br></td>
                <td><%= @course.is_active %><br></td>
                <td><%= @course.start_date %><br></td>
                <td><%= @course.end_date %><br></td>
                <td><button type="button" class="btn btn-default navbar-btn"><%= link_to 'Show Course Detail', id: @course.id , :controller => 'courses', :action => 'show' %></button></td>
                <td><button type="button" class="btn btn-default navbar-btn"><%= link_to 'Drop Course', id: student_course.id , :controller => 'student_courses', :action => 'update', :drop => true  %></button></td>
              </tr>
          <%	 end %>
      <% end %>
      </tbody>
    </table>
  </center>
</div>
<nav class="navbar navbar-default">
  <button type="button" class="btn btn-default navbar-btn"><%= link_to('Back', :controller => 'students' , :action => 'home')%></button>
</nav>

