<div class="container">
  <center>
    <h1>Search Results</h1>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Course ID</th>
        <th>Instructor Email</th>
        <th>Title</th>
        <th>  Description  </th>
        <th>  Materials  </th>
        <th>Is Active</th>
        <th>  Start Date  </th>
        <th>  End Date  </th>
      </tr>
      </thead>

      <tbody>
      <% if !@courses.nil? %>
        <% @courses.each do |course| %>
            <tr>
              <td><%= course.course_id %><br></td>
              <td><%= course.email %><br></td>
              <td><%= course.title %><br></td>
              <td><%= course.description %><br></td>
              <td><%= course.materials %><br></td>
              <td><%= course.is_active %><br></td>
              <td><%= course.start_date %><br></td>
              <td><%= course.end_date %><br></td>
              <td><%=link_to({ :controller => 'courses', :action => 'show', :id => course.id}, {:class => 'btn btn-default'}) do%>
                    <i>Show</i><%end%></td>
              <%if course.is_active %>
                  <td><%=link_to({ :controller => 'students', :action => 'enrollmentrequest', :course_id => course.course_id}, {:class => 'btn btn-default'}) do%>
                        <i>Enroll</i><%end%></td>
              <%end%>
            </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </center>
</div>
<nav class="navbar navbar-default">
  <div>
    <%=link_to({:controller => 'students' , :action => 'home'}, {:class => 'btn btn-default'}) do%>
        <i>Back</i><%end%>
    <%@courses = Course.all %>
    <%=link_to({:controller => 'courses' , :action => 'index'}, {:class => 'btn btn-default'}) do%>
        <i>Show All Courses</i><%end%>
  </div>
</nav>