<div class="container">
  <center>
    <h1>All Courses</h1>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Course ID</th>
            <th>Instructor Email</th>
            <th>Title</th>
            <th>  Description  </th>
            <th>  Materials  </th>
            <th>Is Active</th>
            <th>  Start Date  </th>
            <th>  End Date  </th>
          </tr>
          </thead>

          <tbody>
          <% @courses.each do |course| %>
              <tr>
                <td><%= course.course_id %><br></td>
                <td><%= course.email %><br></td>
                <td><%= course.title %><br></td>
                <td><%= course.description %><br></td>
                <td><%= course.materials %><br></td>
                <td><%= course.is_active %><br></td>
                <td><%= course.start_date %><br></td>
                <td><%= course.end_date %><br></td>
                <% @user = User.find(session[:id]) %>
                <%if @user.is_admin %>
                  <td><button type="button" class="btn btn-default navbar-btn"><%= link_to 'Show', id: course.id , :action => 'show' %></button></td>
                  <td><button type="button" class="btn btn-default navbar-btn"><%= link_to'Edit', :controller => 'courses' , :action => 'edit', id: course.id%></button></td>
                  <td><button type="button" class="btn btn-default navbar-btn"><%= link_to 'Delete',id: course.id, :action => 'destroy' %></button></td>

                <%elsif course.is_active%>
                    <td><button type="button" class="btn btn-default navbar-btn"><%= link_to('Enroll', :controller => 'students', :action => 'enrollmentrequest', :course_id => course.course_id)  %></button></td>
                <% end%>
              </tr>
          <% end %>
          </tbody>
        </table>
    </center>
  </div>
<nav class="navbar navbar-default">
  <div class="btn-group-vertical" role="group" aria-label="...">
    <%if @user.is_admin %>
        <button type="button" class="btn btn-default navbar-btn"><%= link_to('Back', :controller => 'admins' , :action => 'home')%></button>
    <%else%>
        <button type="button" class="btn btn-default navbar-btn"><%= link_to('Back', :controller => 'students' , :action => 'home')%></button>
    <%end%>
  </div>
</nav>