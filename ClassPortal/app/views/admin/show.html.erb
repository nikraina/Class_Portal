<div id="wrapper">
  <div id="sidebar-wrapper" class="col-md-2">
    <div class = "side_bar">
      <div class="list-group">
        <button type="button" class="btn btn-default navbar-btn"><%= link_to('Back', :controller => 'admin' , :action => 'index')%></button>
      </div>
    </div>
  </div>
</div>
<div>
<% if params[:viewusers] %>
    <h1>Display All Users</h1>
    <table>
      <thead>
      <tr>
        <th>  E-mail           </th>
        <th>  Name             </th>
        <th>  Is Admin??       </th>
        <th>  Is Instructor??  </th>
      </tr>
      </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.email %><br></td>
          <td><%= user.name %><br></td>
          <td><%= user.is_admin %><br></td>
          <td><%= user.is_instructor %><br></td>
          <td><%= link_to 'Edit',user, :controller => 'users', :action => 'edit'%><br></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %><br></td>
        </tr>
    <% end %>
    </tbody>
    </table>

<%elsif params[:viewcourses] %>
    <h1>Display All Courses</h1>
    <table>
      <thead>
      <tr>
        <th>  Course No.    </th>
        <th>  Title         </th>
        <th>  Description   </th>
        <th>  Materials     </th>
        <th>  Is Active??   </th>
        <th>  Start Date    </th>
        <th>  End Date      </th>
      </tr>
      </thead>

      <tbody>
      <% @courses.each do |course| %>
          <tr>
            <td><%= course.course_id %><br></td>
            <td><%= course.title %><br></td>
            <td><%= course.description %><br></td>
            <td><%= course.materials %><br></td>
            <td><%= course.is_active %><br></td>
            <td><%= course.start_date %><br></td>
            <td><%= course.end_date %><br></td>
            <td><%= link_to 'Edit',course, :controller => 'courses', :action => 'edit'%><br></td>
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %><br></td>
          </tr>
      <% end %>
      </tbody>
    </table>

<%elsif params[:viewenrollment] %>
    <h1>Display All Student Course Enrollments</h1>
    <table>
      <thead>
      <tr>
        <th>  Course ID               </th>
        <th>  Student Email           </th>
        <th>  Grade                   </th>
        <th>  Is Enrolled             </th>
        <th>  Has Requested Enrollment</th>
        <th>  Enrollment Denied       </th>
      </tr>
      </thead>
      <!% @user = User.find(session[:id]) %>
      <tbody>

      <% @student_courses.each do |student_course| %>
          <%if student_course.has_requested %>
              <tr>
                <td><%= student_course.course_id %><br></td>
                <td><%= student_course.email %><br></td>
                <td><%= student_course.grade %><br></td>
                <td><%= student_course.is_curr_enrolled %><br></td>
                <td><%= student_course.has_requested %><br></td>
                <td><%= student_course.is_denied %><br></td>
                <td><%= link_to 'Edit', student_course, action: 'edit'%><br></td>
                <td><%= link_to 'History', controller: 'student_courses', action:  'index' , :viewspecific => true , :email => student_course.email %><br></td>
                <td><%= link_to 'Destroy', student_course, method: :delete, data: { confirm: 'Are you sure?' } %><br></td>

              </tr>
          <%end %>
      <% end %>
      </tbody>
    </table>

<%end %>

</div>