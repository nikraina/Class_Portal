<hi>Display All Courses</hi>
<table>
  <thead>
  <tr>
    <th>  Course No.  </th>
    <th>  Title  </th>
    <th>  Description  </th>
    <th>  Materials  </th>
    <th>  Is Active??  </th>
    <th>  Start Date  </th>
    <th>  End Date  </th>
  </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_id %><br></td>
        <td><%= course.title %><br></td>
        <td><%= course.description %><br></td>
        <td><%= course.materials %><br></td>
        <td><%= course.is_active %><br></td>
        <td><%= course.start_date %><br></td>
        <td><%= course.end_date %><br></td>
        <td><%= link_to 'Edit',course, :controller => 'courses', :action => 'edit'%></td>
        <td><!%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
